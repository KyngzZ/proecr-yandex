import pygame
import sys

# Инициализация Pygame
pygame.init()

# Размеры окна
WINDOW_WIDTH, WINDOW_HEIGHT = 800, 600
screen = pygame.display.set_mode((WINDOW_WIDTH, WINDOW_HEIGHT))
pygame.display.set_caption("Анимация врагов и босса")

# Загрузка спрайтлиста
sprite_sheet = pygame.image.load("sprite_sheet.png").convert_alpha()

# Параметры анимации
FRAME_WIDTH, FRAME_HEIGHT = 64, 64  # Размер одного кадра
ENEMY_FRAMES = [sprite_sheet.subsurface(pygame.Rect(x * FRAME_WIDTH, 0, FRAME_WIDTH, FRAME_HEIGHT))
                for x in range(8)]  # Пример: 8 кадров анимации врага

BOSS_FRAMES = [sprite_sheet.subsurface(pygame.Rect(x * FRAME_WIDTH, FRAME_HEIGHT, FRAME_WIDTH, FRAME_HEIGHT))
               for x in range(8)]  # Пример: 8 кадров анимации босса

# Переменные для анимации
enemy_index = 0
boss_index = 0
ANIMATION_SPEED = 100  # Скорость обновления кадров (мс)
last_update = pygame.time.get_ticks()

# Координаты врага и босса
enemy_pos = [200, 300]
boss_pos = [400, 300]

# Основной цикл
running = True
while running:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False

    # Обновление анимации
    now = pygame.time.get_ticks()
    if now - last_update > ANIMATION_SPEED:
        enemy_index = (enemy_index + 1) % len(ENEMY_FRAMES)
        boss_index = (boss_index + 1) % len(BOSS_FRAMES)
        last_update = now

    # Отображение
    screen.fill((0, 0, 0))  # Очистка экрана
    screen.blit(ENEMY_FRAMES[enemy_index], enemy_pos)  # Отображение врага
    screen.blit(BOSS_FRAMES[boss_index], boss_pos)  # Отображение босса

    pygame.display.flip()

# Выход
pygame.quit()
sys.exit()

